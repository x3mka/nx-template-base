{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.base.json"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"]
  }
}